<aura:component>
    <aura:registerEvent name = "removeProductFromCompareListEvent" type = "c:ProductShippedEvent" />
    <aura:registerEvent name = "isOrderWindowOpenedEvent" type = "c:BooleanShippedEvent" />
    <aura:registerEvent name = "isCompareWindowOpenedEvent" type = "c:BooleanShippedEvent" />
    <aura:registerEvent name = "productSelected" type="c:ProductShippedEvent"/>

    <aura:attribute name="currencyRate" type="Object" />
    <aura:attribute name="productPrice" type="Decimal" />
    <aura:attribute name="product" type="Product2"/>

    <lightning:buttonIcon iconName="utility:close" variant="bare" onclick="{! c.removeFromCompare }" alternativeText="Close window" />
    <c:DisplayScooterDataComponent product="{!v.product}" productPrice="{!v.productPrice}" currencyRate="{!v.currencyRate}"/>
    <lightning:button class="slds-size_12-of-12 slds-button  slds-button_stretch" variant="success" label="Buy now" title="Buy now" onclick = "{!c.orderProductClicked}"/>

</aura:component>	
